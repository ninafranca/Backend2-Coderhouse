<h1>Productos</h1>
<div class="products-list">
    {{#if products}}
        {{#each products}}
            <div>
                <h2 class="title">{{this.title}}</h2>
                <h2 class="price">${{this.price}}</h2>
                <img src="{{this.thumbnail}}" alt="Product image" class="thumbnail" style="width: 10vw;">
                <button id="{{this._id}}" class="btn btn-secondary">Comprar</button>
            </div> 
        {{/each}}
    {{else}}
        <h2>No hay productos</h2>
    {{/if}}
</div>