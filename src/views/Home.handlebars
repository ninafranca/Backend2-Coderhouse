<h1>Productos</h1>
<div>
    {{#if products}}
        {{#each products}}
            <div>
                <h2>{{this.title}}</h2>
                <h2>${{this.price}}</h2>
                <img src="{{this.thumbnail}}" alt="Product image" style="width: 20vw">
                <button class="btn btn-secondary btn-lg">Comprar</button>
            </div>
        {{/each}}
    {{else}}
        <h2>No hay productos</h2>
    {{/if}}
</div>